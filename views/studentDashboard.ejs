<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Student Dashboard - LMS</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <style>
    body {
      min-height: 100vh;
      display: flex;
      flex-direction: column;
    }
    .sidebar {
      height: 100vh;
      position: fixed;
      top: 56px;
      left: 0;
      width: 220px;
      background-color: #f8f9fa;
      padding-top: 20px;
      transition: transform 0.3s ease-in-out;
      z-index: 1000;
    }
    .sidebar a {
      display: block;
      padding: 10px 20px;
      color: #000;
      text-decoration: none;
    }
    .sidebar a:hover {
      background-color: #e2e6ea;
    }
    .content {
      margin-left: 220px;
      padding: 20px;
      margin-top: 56px;
    }

    @media (max-width: 768px) {
      .sidebar {
        transform: translateX(-220px);
      }
      .sidebar.show {
        transform: translateX(0);
      }
      .content {
        margin-left: 0;
      }
    }

    @media (max-width:496px) {
      .msg {
        margin-top: 20px;
      }
    }

    .card {
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }
  </style>
</head>
<body>

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
    <div class="container-fluid">
      <button class="btn btn-outline-light d-md-none" id="toggleSidebar">â˜°</button>
      <a class="navbar-brand ms-3" href="#">Student Dashboard</a>
      <div class="ms-auto text-white me-3">
        Welcome, <strong><%= student.name %></strong>
      </div>
      <div>
        <a href="/logout" class="btn btn-outline-light me-3">Logout</a>
      </div>
    </div>
  </nav>

  <!-- Sidebar -->
  <div class="sidebar bg-light" id="sidebar">
    <a href="/student/dashboard" class="bg-dark text-white">Dashboard</a>
    <a href="/student/available-books">Show All Books</a>
    <a href="/student/my-books">My Borrowed Books</a>
  </div>

  <!-- Main Content -->
  <div class="content container">
    <h3 class="mb-4 msg">Welcome, <%= student.name %></h3>
  </div>

  <!-- Sidebar Toggle Script -->
  <script>
    document.getElementById('toggleSidebar').addEventListener('click', function () {
      document.getElementById('sidebar').classList.toggle('show');
    });
  </script>

</body>
</html>
