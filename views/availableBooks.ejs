<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Available Books - LMS</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <style>
    body {
      min-height: 100vh;
      display: flex;
      flex-direction: column;
    }
    .sidebar {
      height: 100vh;
      position: fixed;
      top: 56px;
      left: 0;
      width: 220px;
      background-color: #f8f9fa;
      padding-top: 20px;
      transition: transform 0.3s ease-in-out;
    }
    .sidebar a {
      display: block;
      padding: 10px 20px;
      color: #000;
      text-decoration: none;
    }
    .sidebar a:hover {
      background-color: #e2e6ea;
    }
    .content {
      margin-left: 220px;
      padding: 20px;
      margin-top: 56px;
    }

    @media (max-width: 768px) {
      .sidebar {
        transform: translateX(-220px);
      }
      .sidebar.show {
        transform: translateX(0);
      }
      .content {
        margin-left: 0;
      }
    }

    .card {
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }
  </style>
</head>
<body>

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
    <div class="container-fluid">
      <button class="btn btn-outline-light d-md-none" id="toggleSidebar">â˜°</button>
      <a class="navbar-brand ms-3" href="#">Welcome, <%= student.name %></a>
      <div class="ms-auto">
        <a href="/logout" class="btn btn-outline-light me-3">Logout</a>
      </div>
    </div>
  </nav>

  <!-- Sidebar -->
  <div class="sidebar bg-light" id="sidebar">
    <a href="/student/dashboard" class="bg-dark text-white">Dashboard</a>
    <a href="/student/available-books">Show All Books</a>
    <a href="/student/my-books">Your Issued Books</a>
  </div>

  <!-- Content -->
  <div class="content container">
    <h3 class="mb-4">Available Books</h3>

    <!-- Search -->
    <div class="mb-3">
      <input type="text" id="searchInput" class="form-control" placeholder="Search by title, author or ISBN...">
    </div>

    <!-- Book Table -->
    <div class="table-responsive">
      <table class="table table-bordered table-striped align-middle" id="booksTable">
        <thead class="table-dark">
          <tr>
            <th>Title</th>
            <th>Author</th>
            <th>ISBN</th>
            <th>Department</th>
            <th>Total Copies</th>
            <th>Available Copies</th>
          </tr>
        </thead>
        <tbody>
          <% if (books.length === 0) { %>
            <tr>
              <td colspan="6" class="text-center">No books found.</td>
            </tr>
          <% } else { %>
            <% books.forEach(book => { %>
              <% if (book.availableCopies >= 0) { %>
                <tr>
                  <td><%= book.title %></td>
                  <td><%= book.author %></td>
                  <td><%= book.isbn %></td>
                  <td><%= book.department %></td>
                  <td><%= book.totalCopies %></td>
                  <td><%= book.availableCopies %></td>
                </tr>
              <% } %>
            <% }) %>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- JS Scripts -->
  <script>
    document.getElementById('toggleSidebar').addEventListener('click', function () {
      document.getElementById('sidebar').classList.toggle('show');
    });

    // Search filter
    document.getElementById('searchInput').addEventListener('keyup', function () {
      const query = this.value.toLowerCase();
      const rows = document.querySelectorAll('#booksTable tbody tr');

      rows.forEach(row => {
        const text = row.textContent.toLowerCase();
        row.style.display = text.includes(query) ? '' : 'none';
      });
    });
  </script>
</body>
</html>
