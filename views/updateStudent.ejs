<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Update Student - LMS</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      min-height: 100vh;
      display: flex;
      flex-direction: column;
    }
    .sidebar {
      height: 100vh;
      position: fixed;
      top: 56px;
      left: 0;
      width: 220px;
      background-color: #f8f9fa;
      padding-top: 20px;
      transition: transform 0.3s ease-in-out;
    }
    .sidebar a {
      display: block;
      padding: 10px 20px;
      color: #000;
      text-decoration: none;
    }
    .sidebar a:hover {
      background-color: #e2e6ea;
    }
    .content {
      margin-left: 220px;
      padding: 20px;
      margin-top: 56px;
    }

    @media (max-width: 768px) {
      .sidebar {
        transform: translateX(-220px);
      }
      .sidebar.show {
        transform: translateX(0);
      }
      .content {
        margin-left: 0;
      }
    }

    .card {
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }
  </style>
</head>
<body>

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
    <div class="container-fluid">
      <button class="btn btn-outline-light d-md-none" id="toggleSidebar">â˜°</button>
      <a class="navbar-brand ms-3" href="#">Library Admin</a>
      <div class="ms-auto">
        <a href="/logout" class="btn btn-outline-light me-3">Logout</a>
      </div>
    </div>
  </nav>

  <!-- Sidebar -->
  <div class="sidebar bg-light" id="sidebar">
    <a href="/admin/dashboard" class="bg-dark text-white">Dashboard</a>
    <a href="/admin/add-student"> Add Student</a>
    <a href="/admin/students"> Show All Students</a>
    <a href="/admin/add-book"> Add Book</a>
    <a href="/admin/books"> Show All Books</a>
    <a href="/admin/issue-book"> Issue Book</a>
    <a href="/admin/borrowed-books"> Issued Books</a>
    <a href="/admin/returned-books"> Returned Books</a>
  </div>

  <!-- Content -->
  <div class="content container">
    <h3 class="mb-4">Update Student Details</h3>
    <form action="/admin/update-student/<%= student._id %>" method="post" class="row g-3">
      <div class="col-md-6">
        <label for="name" class="form-label">Full Name</label>
        <input type="text" name="name" id="name" class="form-control" value="<%= student.name %>" required>
      </div>
      <div class="col-md-6">
        <label for="email" class="form-label">Email</label>
        <input type="email" name="email" id="email" class="form-control" value="<%= student.email %>" required>
      </div>
      <div class="col-md-6">
        <label for="rollNo" class="form-label">Roll Number</label>
        <input type="text" name="rollNo" id="rollNo" class="form-control" value="<%= student.rollNo %>" required>
      </div>
      <div class="col-md-6">
        <label for="fatherName" class="form-label">Father's Name</label>
        <input type="text" name="fatherName" id="fatherName" class="form-control" value="<%= student.fatherName %>" required>
      </div>
      <div class="col-md-6">
        <label for="class" class="form-label">Class</label>
        <input type="text" name="class" id="class" class="form-control" value="<%= student.class %>" required>
      </div>
      <div class="col-12">
        <button type="submit" class="btn btn-success">Update Student</button>
        <a href="/admin/students" class="btn btn-secondary">Cancel</a>
      </div>
    </form>
  </div>

  <!-- Scripts -->
  <script>
    document.getElementById('toggleSidebar').addEventListener('click', function () {
      document.getElementById('sidebar').classList.toggle('show');
    });
  </script>

</body>
</html>
