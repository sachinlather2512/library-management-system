<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Returned Books - LMS</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <style>
    body {
      min-height: 100vh;
      display: flex;
      flex-direction: column;
    }
    .sidebar {
      height: 100vh;
      position: fixed;
      top: 56px;
      left: 0;
      width: 220px;
      background-color: #f8f9fa;
      padding-top: 20px;
      transition: transform 0.3s ease-in-out;
    }
    .sidebar a {
      display: block;
      padding: 10px 20px;
      color: #000;
      text-decoration: none;
    }
    .sidebar a:hover {
      background-color: #e2e6ea;
    }
    .content {
      margin-left: 220px;
      padding: 20px;
      margin-top: 56px;
    }

    @media (max-width: 768px) {
      .sidebar {
        transform: translateX(-220px);
      }
      .sidebar.show {
        transform: translateX(0);
      }
      .content {
        margin-left: 0;
      }
    }

    .card {
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }

    table {
      background-color: white;
    }
  </style>
</head>
<body>

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
    <div class="container-fluid">
      <button class="btn btn-outline-light d-md-none" id="toggleSidebar">☰</button>
      <a class="navbar-brand ms-3" href="#">Library Admin</a>
      <div class="ms-auto">
        <a href="/logout" class="btn btn-outline-light me-3">Logout</a>
      </div>
    </div>
  </nav>

  <!-- Sidebar -->
  <div class="sidebar bg-light" id="sidebar">
    <a href="/admin/dashboard">Dashboard</a>
    <a href="/admin/add-student">Add Student</a>
    <a href="/admin/students">Show All Students</a>
    <a href="/admin/add-book">Add Book</a>
    <a href="/admin/books">Show All Books</a>
    <a href="/admin/issue-book">Issue Book</a>
    <a href="/admin/borrowed-books">Borrowed Books</a>
    <a href="/admin/returned-books">Returned Books</a>
  </div>

  <!-- Content -->
  <div class="content container">
    <h3 class="mb-4">Returned Books</h3>
    <div class="table-responsive">
      <table class="table table-bordered table-striped align-middle">
        <thead class="table-dark">
          <tr>
            <th>Student Name</th>
            <th>Roll Number</th>
            <th>Book Title</th>
            <th>ISBN</th>
            <th>Issue Date</th>
            <th>Due Date</th>
            <th>Returned Date</th>
            <th>Fine (₹)</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% if (records.length === 0) { %>
            <tr>
              <td colspan="9" class="text-center">No returned books found.</td>
            </tr>
          <% } else { %>
            <% records.forEach(record => { %>
              <tr>
                <td><%= record.student?.name || 'N/A' %></td>
                <td><%= record.student?.rollNo || 'N/A' %></td>
                <td><%= record.book?.title || 'N/A' %></td>
                <td><%= record.book?.isbn || 'N/A' %></td>
                <td><%= new Date(record.issueDate).toLocaleDateString() %></td>
                <td><%= new Date(record.dueDate).toLocaleDateString() %></td>
                <td><%= new Date(record.returnDate).toLocaleDateString() %></td>
                <td><%= record.fine %></td>
                <td>
                  <form action="/admin/delete-returned-book/<%= record._id %>" method="post" onsubmit="return confirm('Are you sure you want to delete this record?');">
                    <button class="btn btn-sm btn-danger">Delete</button>
                  </form>
                </td>
              </tr>
            <% }) %>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Sidebar toggle script -->
  <script>
    document.getElementById('toggleSidebar').addEventListener('click', function () {
      document.getElementById('sidebar').classList.toggle('show');
    });
  </script>

</body>
</html>
